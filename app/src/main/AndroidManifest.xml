<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dika.dipnis">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

    <application
        android:name=".Global"
        android:allowBackup="true"
        android:icon="@mipmap/dipnis_logo"
        android:label="@string/strNazivAplikacije"
        android:roundIcon="@mipmap/dipnis_logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/strNazivAplikacije"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AboutActivity"
            android:label="@string/strTitleOAplikaciji"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.dika.dipnis.MainActivity" />
        </activity>
        <activity
            android:name=".EventReviewActivity"
            android:label="@string/strTitlePregledDogadjaja"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.dika.dipnis.MainActivity" />
        </activity>
        <activity
            android:name=".EventAddActivity"
            android:label="@string/strTitleDodajDogadjaj"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateVisible|adjustPan">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.dika.dipnis.MainActivity" />
        </activity>
        <activity
            android:name=".InitiativeReviewActivity"
            android:label="@string/strTitlePregledInicijativa"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.dika.dipnis.MainActivity" />
        </activity>
        <activity
            android:name=".InitiativeAddActivity"
            android:label="@string/strTitleDodajInicijativu"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.dika.dipnis.MainActivity" />
        </activity>
        <activity
            android:name=".ProblemReviewActivity"
            android:label="@string/strTitlePregledProblema"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.dika.dipnis.MainActivity" />
        </activity>
        <activity
            android:name=".ProblemAddActivity"
            android:label="@string/strTitleDodajProblem"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.dika.dipnis.MainActivity" />
        </activity>
        <activity
            android:name=".EventDescriptionActivity"
            android:label="@string/strTitleOpisDogadjaja"
            android:parentActivityName=".EventReviewActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.dika.dipnis.EventReviewActivity" />
        </activity>
        <activity
            android:name=".InitiativeDescriptionActivity"
            android:label="@string/strTitleOpisInicijative"
            android:parentActivityName=".InitiativeReviewActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.dika.dipnis.InitiativeReviewActivity" />
        </activity>
        <activity
            android:name=".ProblemDescriptionActivity"
            android:label="@string/strTitleOpisProblema"
            android:parentActivityName=".ProblemReviewActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.dika.dipnis.ProblemReviewActivity" />
        </activity>
    </application>

</manifest>